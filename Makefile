dist: clean
	@python3 -m build

publish: dist
	@twine upload dist/*

clean:
	@rm -rf dist build ocifs.egg-info
	@find ./ -name '*.pyc' -exec rm -f {} \;
	@find ./ -name 'Thumbs.db' -exec rm -f {} \;
	@find ./ -name '*~' -exec rm -f {} \;
